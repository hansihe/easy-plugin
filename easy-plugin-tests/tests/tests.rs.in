easy_plugin! {
    enum Enum {
        Attr { $attr:attr },
        Ty { $ty:ty },
    }

    struct Struct {
        $attr:attr $ty:ty
    }

    struct Arguments {
        $attr:attr
        $ty:ty
    NAMED_SEQUENCES:
        $nseqzo1:(foo)?;
        $nseqzo2:(foo)?;
        $($nseqzo3:(bar)?), +;
        $($($nseqzo4:(baz)?), *): +;
        $nseqzm1:(foo)*;
        $nseqzm2:(foo)*;
        $($nseqzm3:(bar)*), +;
        $($($nseqzm4:(baz)*), +): +;
    UNNAMED_SEQUENCES:
        $($unseqzo1:ty)?;
        $($unseqzo2:ty)?;
        $($($unseqzo3:ty)?), +;
        $($($($unseqzo4:ty)?), +): +;
        $($unseqzm1:ty)*;
        $($unseqzm2:ty)*;
        $($($unseqzm3:ty)*), +;
        $($($($unseqzm4:ty)*), +): +;
    ENUMERATED:
        $enum1:$Enum
        $enum2:$Enum
        $($($enum3:$Enum)?), +;
    STRUCTURED:
        $struct1:$Struct
        $struct2:$Struct
        $($($struct3:$Struct)?), +;
    }

    pub fn expand_struct(
        _: &mut ExtCtxt, span: Span, _: Arguments
    ) -> PluginResult<Box<MacResult>> {
        Ok(DummyResult::any(span))
    }
}

#[test]
fn test() {
    let source = r#"
        #[test]
        i32
    NAMED_SEQUENCES:
        ;
        foo;
        , bar;
        : baz: , baz;
        ;
        foo;
        , bar, bar bar;
        : baz: , baz: , baz, baz baz;
    UNNAMED_SEQUENCES:
        ;
        i32;
        , i32;
        : i32: , i32;
        ;
        i32;
        , i32, i32 f32;
        : i32: , i32: , i32, i32 f32;
    ENUMERATED:
        #[test]
        i32
        , #[test], , i32;
    STRUCTURED:
        #[test] i32
        #[foo="bar"] f32
        , #[test] i32, , #[foo="bar"] f32;
    "#;

    let session = ParseSess::new();
    let config = ExpansionConfig::default("".into());
    let mut resolver = DummyResolver;
    let mut context = ExtCtxt::new(&session, vec![], config, &mut resolver);
    let tts = context.parse_tts(source.into());
    expand_struct(&mut context, DUMMY_SP, &tts);
}
